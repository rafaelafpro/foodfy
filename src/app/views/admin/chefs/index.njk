{% extends 'admin/layout.njk' %}

{% block head %}
    <title>Listagem de Chefs | Admin Foodfy</title>
{% endblock %}

{% block content %}

    <h2 id="chefs-p">Gerenciar Chefs</h2>
    <div class="chefs-wrapper">
        {% for chef in chefs %}
            <div class="chef-item">
                <div class="chef-avatar" style="background: url('{{chef.avatar_url}}') no-repeat center / cover"></div>
                <div class="chef-text">
                    <p>{{chef.name}}</p>
                    <a href="/admin/chefs/{{chef.id}}"> Visualizar </a>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}
