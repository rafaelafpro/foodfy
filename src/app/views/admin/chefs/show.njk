{% extends 'admin/layout.njk' %}

{% block head %}
    <title>{{chef.name}} | Admin Foodfy</title>
{% endblock %}

{% block content %}
    <div class="show-chef">
        <div class="title">
            <h2>Chef: {{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
        </div>

        <div class="chef-info">
            <div class="avatar" style="background: url('{{chef.avatar_url}}') no-repeat center / cover"></div>
            <h1>{{chef.name}}</h1>
            <p>{{chef.total_recipes}} receitas</p>
        </div>
    </div>

    <div class="recipes">
        <h2>Receitas</h2>
            {% include 'admin/recipes-list.njk' %}
    </div>

{% endblock %}