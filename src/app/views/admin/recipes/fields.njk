        <div class="item">Imagem da Receita
            <input type="url" name="image" value="{{recipe.image}}">
        </div>
        
        <div class="item">Titulo da Receita
            <input type="text" name="title" value="{{recipe.title}}">
        </div>
        
        <div class="item">Chef
            <select name="chef_id">
                <option value="" disabled selected>Selecione o chef</option>
                {% for chef in chefs %}
                    <option value="{{chef.id}}" {% if chef.id == recipe.chef_id %} selected {%endif%}>{{chef.name}}</option>
                {% endfor%}
            </select>
        </div>